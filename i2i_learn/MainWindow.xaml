<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:oxy="http://oxyplot.org/wpf" mc:Ignorable="av" x:Class="i2i_learn.MainWindow"
        Title="MainWindow" Height="650" Width="925">

    <Border Background="#272537">
        <Grid ShowGridLines="False" Margin="020">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Loading & Finding Peaks -->
            <Label Content="Ready" FontWeight="SemiBold" Grid.Row="0" Grid.Column="0" Foreground="ForestGreen" HorizontalContentAlignment="Center"/>
            <Ellipse HorizontalAlignment="Left" Height="20" Grid.Row="1" Stroke="Black"  Width="20" Fill="Green"/>



            <!-- TODO: Create default button template -->
            <Button Content="Load MZML"
                Grid.Row="1"
                HorizontalAlignment="Center"
                Background="#272537"
                Foreground="White" Grid.RowSpan="2" Margin="0,0,0,14"

                >
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>
                        <Setter Property="Padding" Value="3"/>
                    </Style>
                </Button.Resources>

            </Button>

            <Ellipse HorizontalAlignment="Left" Height="20" Grid.RowSpan="2" Grid.Row="2" Stroke="Black" VerticalAlignment="Top" Width="20" Fill="Green"/>
            <Button Content="Load Analyte List" Grid.Row ="2" Grid.Column ="0" Grid.ColumnSpan="1" HorizontalAlignment="Center"/>
            <Ellipse HorizontalAlignment="Left" Height="20" Grid.RowSpan="2" Grid.Row="3" Stroke="Black" VerticalAlignment="Top" Width="20" Fill="Green"/>
            <Button Content="Find Peaks" Grid.Row ="3" Grid.Column ="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" />

            <!-- M/z Selection Box -->
            <GroupBox Grid.Row="5">
                <StackPanel Orientation="Vertical">
                    <Label Content="m/z" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" Foreground="White"/>
                    <ListBox av:ItemsSource="{av:SampleData ItemCount=5}" 
                         FontSize="10" 
                         BorderThickness="2" 
                         Width="70px"
                         Height="200"
                         Background="#272537"
                         Foreground="White"
                         ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
                </StackPanel>
            </GroupBox>

            <!-- Automatic Contrast Adjustment -->
            <GroupBox Header="Automatic contrast adjustment" 
                  Margin="0" 
                  Grid.Row="6" 
                  Foreground="White"
                  FontWeight="SemiBold">
                <StackPanel Margin="5">
                    <CheckBox x:Name="EnableCheckBox" 
                          Content="Enable" 
                          Margin="0,0,0,0"
                          Foreground="White"/>
                    <StackPanel Orientation="Horizontal" 
                            IsEnabled="{Binding IsChecked, ElementName=EnableCheckBox}">
                        <Label Content="Percentile" 
                           VerticalAlignment="Center"
                           Foreground="White"/>
                        <TextBox Width="30" 
                             Height ="30" 
                             Text="99" 
                             Margin="0,0,0,0" 
                             TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <Border Grid.Row="5" Grid.Column="1" 
        BorderBrush="Gray"
        BorderThickness="2"
        Margin="5"
        VerticalAlignment="Center"
        HorizontalAlignment="Left">
                <oxy:PlotView Height="250" Width="300" Background="#272537"/>
            </Border>

        </Grid>
    </Border>
</Window>