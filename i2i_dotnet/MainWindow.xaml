<mah:MetroWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:vm="clr-namespace:i2i_dotnet.ViewModels"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:targetedViews="clr-namespace:i2i_dotnet.Features.TargetedTab.Views"
    xmlns:views="clr-namespace:i2i_dotnet.Features.TargetedTab.Views"

    mc:Ignorable="av"
    x:Class="i2i_dotnet.MainWindow"
    Title="MainWindow" Height="850" Width="1425"
    WindowStartupLocation="CenterScreen"
    >

    <mah:MetroWindow.DataContext>
        <vm:MainViewModel/>
    </mah:MetroWindow.DataContext>

  


    <Border Background="#272537">
        <Grid ShowGridLines="True" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="Images/i2i-logo.png"
                   Grid.Row="0"
                   Grid.Column="7"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Height="100"></Image>

           <views:WorkflowPanelView
    Grid.Row="0"
    Grid.Column="0"
    DataContext="{Binding TargetedTab.WorkflowPanel }"/>
            <!-- M/z Selection Box -->
            <views:MzmlBoxView Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right"></views:MzmlBoxView>
            <StackPanel Margin="20" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1" VerticalAlignment="Bottom">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text ="Scan Filter" Foreground="White"></TextBlock>
                        <ComboBox HorizontalAlignment="Right" Width="250" Margin="28 0 0 0"
                                  ItemsSource="{Binding TargetedTab.WorkflowPanel.ScanFilters, Mode=TwoWay}"
                                  SelectedItem="{Binding TargetedTab.WorkflowPanel.SelectedScanFilter}"></ComboBox>
                    </StackPanel>
                </StackPanel>
                <!-- Analyte Name -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                    <TextBlock Text="Analyte name"
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"/>
                    <TextBox Width="250" Height="24"/>
                </StackPanel>

                <!-- Navigation Buttons and Value -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <!-- Left Button -->
                    <Button Content="&lt;" Width="50" Margin="5,0"/>

                    <!-- Value Display -->
                    <TextBox Text="0.0000" Foreground="White"
                 Width="80"
                 Height="24"
                 Margin="5,0"
                 HorizontalContentAlignment="Center"
                 IsReadOnly="True"/>

                    <!-- Right Button -->
                    <Button Content="&gt;" Width="50" Margin="5,0"/>
                </StackPanel>
            </StackPanel>


            <!-- Automatic Contrast Adjustment -->
            <GroupBox Header="Automatic contrast adjustment" 
                 
                      Grid.Row="6" 
                      Foreground="White"
                      FontWeight="SemiBold" >
                <StackPanel Margin="5">
                    <CheckBox x:Name="EnableCheckBox" 
                              Content="Enable" 
                              Margin="0,0,0,5"
                              Foreground="White"/>
                    <StackPanel Orientation="Horizontal" 
                                IsEnabled="{Binding IsChecked, ElementName=EnableCheckBox}">
                        <Label Content="Percentile" 
                               VerticalAlignment="Center"
                               Foreground="White"/>
                        <TextBox Width="30" 
                                 Height="20" 
                                 Text="99" 
                                 Margin="0,0,0,0" 
                                 TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <Border Grid.Row="2" Grid.Column="1" 
                    BorderBrush="Gray"
                    BorderThickness="2"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
                <Border Grid.Row="4" Grid.Column="1"
                        BorderBrush="Gray"
                        BorderThickness="2"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">

                    <views:PlotView DataContext="{Binding TargetedTab.PlotViewPanel}"
                                    VerticalAlignment="Stretch"
                                    HorizontalAlignment="Stretch"/>
                </Border>




            </Border>

        </Grid>
    </Border>
</mah:MetroWindow>

