<UserControl x:Class="i2i_dotnet.Features.TargetedTab.Views.SavePlotButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <mah:DropDownButton Content="Save Image">
            <mah:DropDownButton.Items>
                <MenuItem Header="Save as PNG" Command="{Binding SavePngCommand}" />
                <MenuItem Header="Save as SVG" Command="{Binding SaveSvgCommand}" />
            </mah:DropDownButton.Items>
        </mah:DropDownButton>
            
        <Button Grid.Column="1" Content="Save CSV file" ></Button>

    </Grid>
</UserControl>
