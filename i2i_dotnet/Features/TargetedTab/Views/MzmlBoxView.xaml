<UserControl x:Class="i2i_dotnet.Features.TargetedTab.Views.MzmlBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:i2i_dotnet.Features.TargetedTab.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Content="m/z" HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Top" Foreground="White"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding TargetedTab.WorkflowPanel.AnalyteList}" 
                 FontSize="10" 
                 BorderThickness="2" 
                 Width="70px"
                 Height="200"
                 Background="#272537"
                 Foreground="White"
                 SelectedItem = "{Binding TargetedTab.PlotViewPanel.SelectedAnalyte, Mode=TwoWay}"
                 SelectedIndex = "{Binding TargetedTab.PlotViewPanel.SelectedIndex, Mode=TwoWay}"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                             
        />
    </Grid>
</UserControl>
