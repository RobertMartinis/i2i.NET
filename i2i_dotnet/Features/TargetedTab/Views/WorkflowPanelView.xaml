<UserControl x:Class="i2i_dotnet.Features.TargetedTab.Views.WorkflowPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- This is your existing StackPanel, unchanged -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
        <!-- Top Status Label -->
        <Border Background = "{Binding OverallStatusBrush}"
                CornerRadius="6"
                BorderBrush="Black"
                BorderThickness="1"
                Padding="10,4"
                Margin="45,0,0,10"
                Width="120"
                HorizontalAlignment="Left">
            <TextBlock Text="{Binding OverallStatusText}"
                       Foreground="White"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       FontSize="10"
                       HorizontalAlignment="Center"
                       />
        </Border>

        <!-- Main Control Grid -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!-- Row 1 -->
            <Ellipse Fill="{Binding RawState}" Stroke="Black" Width="20" Height="20" Margin="5"
                     Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <Button Content="Load Experiment" Width="120" Margin="5" FontSize="10"
                    Foreground="White"
                    Grid.Row="0" Grid.Column="1"
                    Command="{Binding LoadRawCommand }"/>
            <TextBlock Text="# of files" VerticalAlignment="Center" Margin="5"
                       Foreground="White" FontWeight="Bold"
                       Grid.Row="0" Grid.Column="2"/>
            <TextBox Text="{Binding FileCount}" Width="30" Margin="5" Foreground="White"
                     FontWeight="Bold" IsReadOnly="True"
                     Grid.Row="0" Grid.Column="3"/>

            <!-- Row 2 -->
            <Ellipse Fill="{Binding AnalyteState}" Stroke="Black" Width="20" Height="20" Margin="5"
                     Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <Button Content="Load Analyte List" Width="120" Margin="5"
                    IsEnabled="{Binding CanLoadAnalytes}" FontSize="10"
                    Grid.Row="1" Grid.Column="1"
                    Command = "{Binding LoadAnalyteListCommand}"/>
            <TextBlock Text="# of analytes" VerticalAlignment="Center" Margin="5"
                       Foreground="White" FontWeight="Bold"
                       Grid.Row="1" Grid.Column="2"/>
            <TextBox Text="{Binding AnalyteCount}" Width="30" Margin="5" Foreground="White"
                     IsReadOnly="True"
                     Grid.Row="1" Grid.Column="3"/>

            <!-- Row 3 -->
            <Ellipse Fill="{Binding PeaksState}" Stroke="Black" Width="20" Height="20" Margin="5"
                     Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <Button Content="Find Peaks" Width="120" Margin="5"
                    IsEnabled="False" FontSize="10"
                    Grid.Row="2" Grid.Column="1"/>
            <TextBlock Text="Tolerance" VerticalAlignment="Center" Margin="5"
                       Foreground="White" FontWeight="Bold"
                       Grid.Row="2" Grid.Column="2"/>
            <TextBox Text="5" Width="30" Margin="5" Foreground="White"
                     IsReadOnly="False"
                     Grid.Row="2" Grid.Column="3"/>
        </Grid>
        <ProgressBar
            Minimum="0"
            Maximum="100"
            Height="12"
            Margin="0,10,0,0"
            Value="{Binding Progress, Mode=OneWay}"
            Visibility="{Binding IsLoading,
        Converter={StaticResource BooleanToVisibilityConverter}}" />

        
    </StackPanel>
    
</UserControl>

