<UserControl x:Class="i2i_dotnet.Features.TargetedTab.Views.PlotView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="DarkSlateBlue">
        <!-- Debug text so you KNOW it renders -->
        <TextBlock Foreground="White"
                   Text="{Binding SelectedAnalyte}"/>

        <!-- Host the ScottPlot control -->
        <ContentControl Content="{Binding PlotControl}"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch"/>
    </Grid>
</UserControl>